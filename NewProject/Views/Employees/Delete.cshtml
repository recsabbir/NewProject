@model WebApplication1.Models.Employee
@{ViewBag.PageHTML = "Delete?"; }

    <div class="row">
        <div class="col-2">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="~/Employees/Create"><img src="~/Content/logo/AddEmployee.png" id="logoAddEmp" alt="Create Employee logo" width="15" height="15" /> Add Employee</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/employees/"><img src="~/Content/logo/EmployeeList2.png" id="logoEmpList" alt="Create Employee logo" width="15" height="15" /> Employee List</a>
                </li>
            </ul>
        </div>
        <div class="col-8">
            </br>
            <form method="POST">
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="ID">ID</label>
                        <input type="hidden" name="id" value="@Model.id">
                        <input type="text" class="form-control" value="@Model.id" disabled readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" value="@Model.name" disabled readonly>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="dob">Date of Birth</label>
                        <input type="text" class="form-control" value="@Convert.ToDateTime(Model.dob).ToString("yyyy-MM-dd")" disabled readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="bgroup">Blood Group</label>
                        <input type="text" class="form-control" value="@Model.bgroup" disabled readonly>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="nid">National ID Number</label>
                        <input type="text" class="form-control" value="@Model.nid" disabled readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="phone">Phone Number</label>
                        <input type="text" class="form-control" value="@Model.phone" disabled readonly>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" value="@Model.email" disabled readonly>
                    </div>
                    <div class="form-group col-6">
                        <label for="address">Present Address</label>
                        <input type="text" class="form-control" value="@Model.address" disabled readonly>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-6">
                        <label class="alert-danger">Do you want to delete this employee?</label>
                    </div>
                    <div class="col-6">
                        <input type="submit" class="form-control btn btn-danger" value="DELETE">
                    </div>
                </div>
            </form>

        </div>


    </div>

